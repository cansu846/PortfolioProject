@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Feature>

<div class="card-header border-0">
    <h3 class="mb-0">Feature</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort">Name</th>
                <th scope="col" class="sort" >Surname</th>
                <th scope="col" class="sort">Title</th>

                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FeatureID</td>
                 
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        <a href="/Feature/EditFeature/@item.FeatureID" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Delete</a>
                    </td>
                  
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-end m-5"><a href="/Feature/AddFeature/" class="btn btn-primary btn-lg btn-block" onclick="">Add Feature</a></div>

</div>