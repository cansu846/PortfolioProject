@model Skill
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-4">
    <h1 class="text-center p-3">Add Skill</h1>

<form method="post" action="/Skill/AddSkill/">
    <div class="form-group">
        <label for="Header">Skill Name</label>
        <input type="text" class="form-control" id="Header" name="Header" placeholder="Enter Skill">
    </div>
    <div class="form-group">
        <label for="Value">Value</label>
        <input type="number" class="form-control" id="Value" name="Value" placeholder="Enter skill value example: 70">
    </div>

        <div class=" d-flex justify-content-end mr-3">
            <button type="submit" class="btn btn-primary btn-md" >Add</button>
   </div>
</form>

</div>