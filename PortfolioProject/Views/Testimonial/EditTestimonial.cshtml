@model Testimonial
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-4">
    <h1 class="text-center p-3">Edit Testimonial</h1>

    <form method="post" action="/Testimonial/EditTestimonial/">
        <input type="hidden" asp-for="TestimonialID" />
        <div class="form-group">
            <label for="ClientName">Name</label>
            <input type="text" class="form-control" id="ClientName" name="ClientName" asp-for="ClientName" placeholder="Enter Skill">
        </div>
        <div class="form-group">
            <label for="Role">Role</label>
            <input type="text" class="form-control" id="Role" name="Role" asp-for="Role">
        </div>
        <div class="form-group">
            <label for="Company">Company</label>
            <input type="text" class="form-control" id="Company" name="Company" asp-for="Company">
        </div>
        <div class="form-group">
            <label for="Comment">Comment</label>
            <input type="text" class="form-control" id="Comment" name="Comment" asp-for="Comment">
        </div>

        <div class="form-group">
            <label for="ImageUrl">Image Url</label>
            <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" asp-for="ImageUrl">
        </div>

        <div class=" d-flex justify-content-end mr-3">
            <button type="submit" class="btn btn-primary btn-md">Edit</button>
        </div>
    </form>

</div>