@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<WriterUser>
<div class="container p-3">
<h1>Users</h1>
    <table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
         
        </tr>
     </thead>
     <tbody>
    @foreach (var item in Model) { 
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.SurName</td>
        <td>@item.Email</td>
            
       
    </tr>
    }
    </tbody>
 
</table>

    <div class="d-flex justify-content-end p-3">
            <a href="/WriterUser/Add/" class="btn btn-primary btn-md">Add User</a>
    </div>

</div>