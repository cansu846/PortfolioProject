@model UserMessage

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
<form method="POST" action="/Default/SendUserMessage/">
    <div class="form-group my-2">
        <label for="name" class="form-label fw-bolder">Username</label>
        <input class="form-control" type="text" id="name" name="User.UserName" required>
    </div>
    <div class="form-group my-2">
        <label for="email" class="form-label fw-bolder">Email</label>
        <input class="form-control" type="email" id="email" name="User.Email" required>
    </div>
    <div class="form-group my-2">
        <label for="title" class="form-label fw-bolder">Title</label>
        <input class="form-control" type="text" id="title" name="Title" required>
    </div>
    <div class="form-group my-2">
        <label for="message" class="form-label fw-bolder">Message</label>
        <textarea class="form-control" style="resize: none;" id="message" name="Description" rows="4" required></textarea>
    </div>
    <button class="btn btn-primary mt-2" type="submit">Send</button>
</form>
</div>