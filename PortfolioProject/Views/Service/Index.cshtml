@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Service>

<div class="card-header border-0">
    <h3 class="mb-0">Services</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort">Service Name</th>
                <th scope="col" class="sort" data-sort="completion">Url</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServiceID</td>
                    <td>
                        @item.Header
                    </td>

                    <td>
                        <a href="#">
                            <img height="73px" width="100px" src="~/@item.ImageUrl?">
                            @*                             @item.ImageUrl
 *@                       </a>
                    </td>
                    <td>
                        <a href="/Service/EditService/@item.ServiceID" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Delete</a>
                    </td>
                  
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-end m-5"><a href="/Service/AddService/" class="btn btn-primary btn-lg btn-block" onclick="">Add Service</a></div>

</div>