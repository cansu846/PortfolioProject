@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ListForSearchViewModel

<div class="container p-3">
    @if(Model.FiltredUsers.Count>0){ 
      <div>
            <h1>Users</h1>
            <table class=" table align-items-center table-flush">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.FiltredUsers)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.SurName</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>

            </table>
      </div>
    }
   @if(Model.Projects.Count>0){ 
    <div>
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="sort" data-sort="name">#</th>
                    <th scope="col" class="sort">Project Name</th>
                    <th scope="col" class="sort" data-sort="completion">Url</th>
                </tr>
            </thead>
            <tbody class="list">
                @foreach (var item in Model.Projects)
                {
                    <tr>
                        <td>@item.PortfolioID</td>
                        <td>
                            @item.Name
                        </td>

                        <td>
                            <a href="https://github.com/cansu846">
                                <img height="73px" width="100px" src="~/@item.ImageUrl?">
                                @*                             @item.ImageUrl
 *@                       </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
  </div>
  }
   @if (Model.Services.Count > 0)
    {
        <div>
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" class="sort" data-sort="name">#</th>
                        <th scope="col" class="sort">Service Name</th>
                        <th scope="col" class="sort" data-sort="completion">Url</th>
                    </tr>
                </thead>
                <tbody class="list">
                    @foreach (var item in Model.Services)
                    {
                        <tr>
                            <td>@item.ServiceID</td>
                            <td>
                                @item.Header
                            </td>

                            <td>
                                <a href="#">
                                    <img height="73px" width="100px" src="~/@item.ImageUrl?">
                                    @*                             @item.ImageUrl
 *@                       </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
   @if (Model.Skills.Count > 0)
    {
        <div>
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" class="sort" data-sort="name">Project</th>
                        <th scope="col" class="sort">Skill</th>
                        <th scope="col" class="sort" data-sort="completion">Completion</th>
                    </tr>
                </thead>
                <tbody class="list">
                    @foreach (var item in Model.Skills)
                    {
                        <tr>
                            <td>@item.SkillID</td>
                            <td>
                                @item.Header
                            </td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="completion mr-2">@item.Value%</span>
                                    <div>
                                        <div class="progress">
                                            <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width:  @item.Value%;"></div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
  
</div>
