@{
    ViewData["Title"] = "Announcement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string color = "";
}
@model Announcement

<div class="card-header border-0">
    <h3 class="mb-4">Announcement</h3>

    <div>
        <form method="post" action="/Announcement/Add/">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" asp-for="Title">
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="datetime" class="form-control" id="date" asp-for="Date">
            </div>
            <div class="form-group">
                <label for="type" placehodler>Type</label>
                <select class="form-control" id="type" asp-for="Status">
                    <option>New Article</option>
                    <option>New Video</option>
                    <option>Conference</option>
                    <option>Workshop</option>
                    <option>Bootcamp</option>
                </select>
            </div>
            <div class="form-group">
                <label for="detail">Detail</label>
                <input type="text" class="form-control" id="detail" asp-for="Content">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
