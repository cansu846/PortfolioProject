@model List<Testimonial>
@{
    var count = 0;
}
<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Client Testimonials</h2>
        </div>
        <div class="row">
            @foreach(var item in Model)
            {
                if(count%2==0){
                    <div class="col-md-6 mb-5 aos-init aos-animate" data-aos="fade-right" data-aos-delay="100">
                        <div class="d-flex ms-md-3">
                            <span><i class="fas fa-2x fa-quote-left"></i></span>
                            <span class="m-2">@item.Comment</span>
                        </div>
                        <div class="d-flex justify-content-end align-items-end">
                            <div class="text-end me-2">
                                <div class="fw-bolder">@item.ClientName</div>
                                <div class="text-small">@item.Role / @item.Company</div>
                            </div><img class="me-md-3 rounded" src="~/Template/images/testimonials/@item.ImageUrl" width="96" height="96" alt="client 1">
                        </div>
                    </div>

                    count += 1;
                }
                else
                {
                    <div class="col-md-6 mb-5 aos-init aos-animate" data-aos="fade-left" data-aos-delay="300">
                        <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span>
                            <span class="m-2">@item.Comment</span>
                        </div>
                        <div class="d-flex justify-content-end align-items-end">
                            <div class="text-end me-2">
                                <div class="fw-bolder">@item.ClientName</div>
                                <div class="text-small">@item.Role / @item.Company</div>
                            </div><img class="me-md-3 rounded" src="~/Template/images/testimonials/@item.ImageUrl" width="96" height="96" alt="client 2">
                        </div>
                    </div>

                    count += 1;
                }
            
            }
            
        </div>
    </div>
</div>